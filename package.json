{
  "name": "xpogo-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "npm --workspace=packages/frontend run dev & npm --workspace=packages/backend run dev",
    "dev:frontend": "npm --workspace=packages/frontend run dev",
    "dev:backend": "npm --workspace=packages/backend run dev",
    "build:frontend": "npm --workspace=packages/frontend run build",
    "build:backend": "npm --workspace=packages/backend run build",
    "start:frontend": "npm --workspace=packages/frontend run start",
    "start:backend": "npm --workspace=packages/backend run start"
  }
}
